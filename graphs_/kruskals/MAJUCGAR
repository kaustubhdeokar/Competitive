#include <stdio.h>
#include <iostream>
#include <vector>

int main(int argc, const char* argv[]){
    int T;
    std::cin >> T;
    while (T) {
        int N;
        std::cin >> N;
        
        uint64_t A_i;
        uint64_t min_requirements = 0;
        while(N){
            std::cin >> A_i;
            min_requirements += (A_i - 1);
            N--;
        }
        
        std::cout << min_requirements + 1 << std::endl;
        T--;
    }
    return 0;
}